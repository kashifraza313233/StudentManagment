@model IEnumerable<SMS.WebApp.Models.Course>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create","",new {@class="btn btn-primary"})
</p>
<table class="table table-bordered table-hover table-responsive ">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Course_Tittle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course_Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Duration)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Course_Tittle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Course_Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Duration)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.CId }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Details", "Details", new { id = item.CId }, new { @class = "btn btn-success" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.CId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
