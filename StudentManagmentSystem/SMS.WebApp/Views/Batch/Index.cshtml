@model IEnumerable<SMS.WebApp.Models.Batch>

@{
    ViewBag.Title = "Index";
}

<h2>Batches</h2>

<p>
    @Html.ActionLink("Create New", "Create", "", new {@class="btn btn-primary"})
</p>
<table class="table table-bordered table-hover table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Batch1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Batch1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Year)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.BId }) |
            @Html.ActionLink("Details", "Details", new { id=item.BId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.BId })
        </td>
    </tr>
}

</table>
